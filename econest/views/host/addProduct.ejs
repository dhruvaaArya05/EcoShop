<%- include('../partials/head') %>
  </head>

  <body>

    <div class="container">
      <h2>Add Your Product Here</h2>
      <form action="/host/add-product" method="POST" class="product-form">
        <label for="productName" id="greenproduct">Green Product Name:</label>
        <input type="text" id="productName" name="name" required>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" required>

        <label for="carbonFootprint">Carbon FootPrint:</label>
        <input type="text" id="carbonFootprint" name="carbonFootprint">

        <label for="category">Category:</label>
        <input type="text" id="category" name="category">

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4"></textarea>

        <label for="imageUrl">Image URL:</label>
        <input type="url" id="imageUrl" name="image">

        <button type="submit">Add Product</button>
      </form>
      <a href="/" style="display: flex; justify-content: center; margin-top: 10px;">Go to Home</a>
    </div>
  </body>

  </html>