<%- include('partials/head') %>
  </head>

  <body>
    <%- include('partials/nav') %>

      <main class="main">
        <div class="heading">
          <h1>
            <%= titleHeading %>
          </h1>
          <p class="subtitle">Explore our range of sustainable products for your <%= titleDescription %> area.</p>
        </div>

        <div class="product-list">
          <!-- Product 1 -->
          <% products.forEach(product=> {%>
            <div class="product-card">
              <img src="/images/<%= product.imageURL %>" alt="sustainable Furniture">
              <div class="product-details">
                <h2>
                  <%= product.name %>
                </h2>
                <p>
                  <%= product.description %>
                </p>
                <div class="carbon">
                  <p>Carbon Footprint: <%= product.carbonFootprint %>e</p>
                </div>
                <div class="price-cart">
                  <span class="price">â‚¹<%= product.price %></span>
                  <form action="/add-to-cart/<%= product.id %>" method="POST">
                    <button class="add-btn">Add To Cart</button>
                  </form>

                  <a href="/product/<%= product.id %>" style="text-decoration: none; color: #2f4f4f;">Details</a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
      <!-- NOTIFICATION -->
      <div id="toast" class="toast hidden">ðŸ›’ Your product has been added to the cart</div>

      <%- include('partials/footer') %>
  </body>

  <script>
    function toggleMenu() {
      const navLinks = document.getElementById('nav-links');
      navLinks.classList.toggle('show');
    }

    function showToast() {
      const toast = document.getElementById('toast');
      toast.classList.remove('hidden');
      toast.classList.add('show');

      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => {
          toast.classList.add('hidden');
        }, 400);
      }, 3000);
    }

    document.addEventListener('DOMContentLoaded', function () {
      const addButtons = document.querySelectorAll('.add-btn'); // âœ… Fix here
      addButtons.forEach(button => {
        button.addEventListener('click', showToast); // âœ… Event listener now works for all buttons
      });
    });


  </script>

  </html>